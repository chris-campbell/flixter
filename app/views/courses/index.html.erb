<div class='bg-course-items'>
  <div class='course-heading'>
    <h1>Learn something today</h1>
  </div>
  <div class='select-course-content'>
    <% @courses.each do |course| %>
      <div class='course-item'>
        <h2><%= link_to course.title, course_path(course), class: 'course-title' %></h2>
              <!-- images -->
              <% if course.image.present? %>
                  <%= image_tag course.image, class: 'course-img' %>
              <% else %>
                  <%= image_tag 'default.png', class: 'course-img' %>
              <% end %>
              <!-- Description -->
              <div class="course-description">
                  <p><%= course.description %></p>
              </div>
              
              <div class="cost-sec">
                  <%= link_to 'More Details', course_path(course), class: 'more-details btn btn-primary btn-large' %>
              </div>
              
              <!-- course price -->
              <div class='cost'>
                <% if course.free? %>
                  <b>Free</b>
                <% else %>
                  <b>$<%= course.cost.to_i %></b>
                <% end %>
              </div>
        </div>
    <% end %>
  </div>
</div>