      <div class="col-12 col-sm-3">
        <b>Contact</b>
        <br />
        christopher.campbell@outlook.com
        <br />
        Brooklyn, NY, 11234
      </div>
      <div class="col-12 col-sm-3 social">
        <b>Social</b>
        <br />
        <br />
        <%= link_to 'https://github.com/chris-campbell' do %>
          <span class="fa fa-github-square fa-2x social-button"></span>
